<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="/stylesheets/bootstrap.min.css" rel="stylesheet">
<script src="/javascripts/bootstrap.bundle.min.js"></script>
<script src="/javascripts/color-modes.js"></script>
<link href="/stylesheets/bootstrap-icons.min.css" rel="stylesheet">

  <title>Workout page</title>
  
  
</head>
    <% include ./partial/navbar %>
<body>
    <main>
     
     <div class="container mb-5">
      <br>
      <h1 class="text-center mt-5 text-warning">Food List</h1>
        <div class="row mt-3">
            <div class="col-sm-12 col-md-12 col-lg-3"></div>
            <div class="col-sm-12 col-md-12 col-lg-6">
                <form  action="/food" method="get"class="row g-3 ">
                    <div class="col">
                      <label for="name" class="visually-hidden">Name</label>
                      <input type="search" class="form-control" id="name" name="name" placeholder="<%= name? name :'Name' %>">
                    </div>
                    <div class="col">
                      <label for="category" class="visually-hidden">Category</label>
                     <select name="category" id="" class="form-select mb-3">
                        <option <%= category == ''? 'selected':'' %> value="">All Category</option>
                        <option <%= category == 'protein'? 'selected':'' %> value="protein">Protein</option>
                        <option <%= category == 'carbonhydrate'? 'selected':'' %> value="carbonhydrate">Carbonhydrate</option>
                        <option <%= category == 'fat'? 'selected':'' %> value="fat">Fat</option>
                        <option <%= category == 'fruit'? 'selected':'' %> value="fruit">Fruit</option>
                        <option <%= category == 'vegetable'? 'selected':'' %> value="vegetable">Vegetable</option>
                        <option <%= category == 'drink'? 'selected':'' %> value="drink">Drink</option>
                     </select>
                    </div>
                    <div class="col">
                      <button type="search" class="btn btn-primary mb-3"><b>Search</b></button>
                    </div>
                  </form>
            </div>
            <div class="col-sm-12 col-md-12 col-lg-3"></div>
        </div>
        <div class="table -responsive">
        <table class="table table-bordered border-primary">
            <thead class="text-center">
                <th>Image</th>
                <th>Name</th>
                <th>Calorie</th>
                <th>Per</th>
                <th>Category</th>
                <th>Description</th>
            </thead>
            <tbody class="text-center">
                <% for(var i = 0 ; i < foods.length ; i++){%>  
                <tr>
                    <td>
                        <img src="<%= foods[i].image%>" alt="" style="width : 100px"/>
                    </td>
                    <td> <%= foods[i].name %></td>
                    <td> <%= foods[i].calorie %></td>
                    <td> <%= foods[i].per %></td>
                    <td> <%= foods[i].category %></td>
                    <td> <%= foods[i].description %></td>
                </tr>
                <%}%>
            </tbody>
        </table>
    </div>
     </div>
    </main>
<% include ./partial/footer2 %>
</body>
</html>